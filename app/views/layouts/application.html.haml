    = render 'layouts/header'
    .row
      .large-12.large-centered.columns
        = render 'layouts/flash_messages'
    .row.custom-width
      .small-10.large-centered.columns
      = yield

    = render 'layouts/footer'
    = javascript_include_tag "application"
